extends pug/base

append vars
	- title = "Рассольник"
	- meta.viewport = "width=480, initial-scale=1"

block content
	include pug/blocks/header
	+header('header-main_other-page')
	main.main-content
		header.header-content
			.main-wrapper.main-wrapper_content
				.breadcrumbs
					ul.breadcrumbs-list
						li.breadcrumbs-list__item
							a(href="/") Главная
						li.breadcrumbs-list__item
							a(href="#") Отзывы
				h1.main-h1 Отзывы
		.reviews.section-with-line
			.main-wrapper.wrapper-with-line.main-wrapper__reviews
				.reviews-block
					ul.reviews-tablist(role="tablist")
						li.reviews-tablist__item(role="presentation")
							a#tab1(href="#section1" aria-selected="true" role="tab")
								img(src="images/reviews-tripadvisor.png" alt="Tripadvisor")
						li.reviews-tablist__item(role="presentation")
							a#tab2(href="#section2" aria-selected="true" role="tab")
								img(src="images/reviews-google.png" alt="google")
						li.reviews-tablist__item(role="presentation")
							a#tab3(href="#section3" aria-selected="true" role="tab")
								img(src="images/reviews-flamp.png" alt="flamp")
