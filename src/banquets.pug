extends pug/base

append vars
	- title = "Рассольник"
	- meta.viewport = "width=device-width, initial-scale=1"

block content
	include pug/blocks/header
	+header('header-main_other-page')
	main.main-content
		header.header-content
			.main-wrapper.main-wrapper_content
				.breadcrumbs
					ul.breadcrumbs-list
						li.breadcrumbs-list__item
							a(href="/") Главная
						li.breadcrumbs-list__item
							a(href="#") Банкеты
				h1.main-h1 Банкеты
		section.banquets
			.main-wrapper.banquets-wrapper
				.banquets-description
					.title-content Мы рады помочь вам с проведением праздника
					.description-content
						p.description-text
							| Мой любимый ресторан. Была здесь с родителями,
							| встречалась с подругами. Всегда высокий уровень
							| обслуживания, прекрасная кухня, отличная атмосфера.
							| Здесь все в советском стиле, приходя сюда, будто
							| попадаешь в детство. У гардероба встречает добродушный
							| дядя Вася в растянутых трениках, провожает к столику.
							| Официантки внимательные, но когда много
							| посетителей, обслуживают медленно.
					p.slider-text.slider-text_description
						| Приглашаем Вас окунуться
						|                                    в&nbsp;уютную атмосферу СССР
						|                                    70-х годов
				.banquets-menu.menu-content
					.menu-title-wrapper
						h2.menu-title Банкетное меню
						.slider-pagination
								button.slider-pagination-button.slider-pagination-button__prev(aria-label="предыдущий слайд")
									| <svg aria-hidden="true" version="1.1" width="7" height="12" class="svg-slick-arrow" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 4.3 7.6" style="enable-background:new 0 0 4.3 7.6;" xml:space="preserve">
									| <style type="text/css">
									|     .path-arrow-slick{fill:none;stroke:#cd501f;stroke-linecap:round;stroke-linejoin:round;stroke-miterlimit:10;}
									| </style>
									| <g>
									|     <polyline class="path-arrow-slick" points="3.8,7.1 0.5,3.8 3.8,0.5 	"></polyline>
									| </g>
									| </svg>
								button.slider-pagination-button.slider-pagination-button__next(aria-label="следующий слайд")
									| <svg aria-hidden="true" width="7" height="12" version="1.1" class="svg-slick-arrow" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 4.3 7.6" style="enable-background:new 0 0 4.3 7.6;" xml:space="preserve">
									| <style type="text/css">
									|     .path-arrow-next{fill:none;stroke:#cd501f;stroke-linecap:round;stroke-linejoin:round;stroke-miterlimit:10;}
									| </style>
									| <g>
									|     <polyline class="path-arrow-next" points="0.5,7.1 3.8,3.8 0.5,0.5 "></polyline>
									| </g>
									| </svg>



					include pug/mixins/content-slider
					+slider-item('false','banquets')
					.page-slider-navigation
							.page-slider__enumerator
								span.page-slider__current
								| /
								span.page-slider__total
				.menu-decor
					.menu-decor__item
					.menu-decor__item
					.menu-decor__item
		.photo-hall
			.main-wrapper.photo-hall__wrapper
				figure.photo-hall__item
					a(href='#hall1').photo-hall__item-wrapper
						picture.photo-hall__img
							source(srcset="images/photo-hall1.webp" type="image/webp")
							img(src="images/photo-hall1.jpg" alt="Зал 1")
					figcaption.photo-hall__text
						span.photo-hall__title Зал номер 1
						span.photo-hall__quantity-place 50 мест
				figure.photo-hall__item
					a(href='#hall2').photo-hall__item-wrapper
						picture.photo-hall__img
							source(srcset="images/photo-hall2.webp" type="image/webp")
							img(src="images/photo-hall2.jpg" alt="Зал 2")
					figcaption.photo-hall__text
						span.photo-hall__title Зал номер 2
						span.photo-hall__quantity-place 50 мест
				figure.photo-hall__item
					a(href='#hall3').photo-hall__item-wrapper
						picture.photo-hall__img
							source(srcset="images/photo-hall3.webp" type="image/webp")
							img(src="images/photo-hall3.jpg" alt="Зал 3")
					figcaption.photo-hall__text
						span.photo-hall__title Зал номер 3
						span.photo-hall__quantity-place 50 мест
			.main-wrapper.photo-gallery
				.photo-gallery__item#hall1
					a(href="images/photo-hall1.jpg")
					a(href="images/photo-hall1.jpg")
					a(href="images/photo-hall1.jpg")
				.photo-gallery__item#hall2
					a(href="images/photo-hall2.jpg")
					a(href="images/photo-hall2.jpg")
					a(href="images/photo-hall2.jpg")
				.photo-gallery__item#hall3
					a(href="images/photo-hall3.jpg")
					a(href="images/photo-hall3.jpg")
					a(href="images/photo-hall3.jpg")
		include pug/blocks/callback-without-popup
		+callback-h('')
	include pug/blocks/footer
	+footer('')
	include pug/blocks/callback
	+callback
	include pug/blocks/arrow-top
